html, body
  height: 100%
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

body
  background: #eee
  font-family: 'Arial', helvetica, sans-serif
  font-size: 62.5%
  
.fork-button
  display: block
  text-align: center
  padding: .5em 0
  font-size: 1.2em
  text-transform: uppercase
  font-weight: bold
  color: #777
  width: 30em
  background: #eee
  position: fixed
  transform: rotate(45deg)
  top: 5em
  right: -9em
  text-decoration: none
  transition: background .5s ease
  z-index: 100
  
  &:hover
    background: #ccc
  
.header
  width: 100%
  height: 6em
  background: #444
  position: relative
  height: 100%
  display: flex
  texturize('concrete')
  
  &:after
    content: ''
    position: absolute
    bottom: 3em
    left: 50%
    margin-left: -20px
    width: 3em
    height: @width
    background-image: url('data:image/svg+xml;base64,')
    background-size: contain
    opacity: .5
    animation(bounce 2s infinite)

@keyframes bounce
  0%
    transform(translateY(0))
  50%
    transform(translateY(-30px)) 
  
.header-wrapper
  width: 100%
  margin: auto
  text-align: center
  font-family: 'Fredoka One', cursive
  
.header-logo
  font-weight: normal
  font-size: 8em
  margin: 0
  padding: 0
  line-height: 1.1
  color: #fff
  
.header-description
  margin: 0
  padding: .3em
  font-size: 1.3em
  color: #666
  text-transform: uppercase
  letter-spacing: .2em
  
.header-actions
  padding-top: 4em
  
.button
  display: inline-block
  padding: 1em 2em
  font-size: 1.3em
  color: #ccc
  border: 1px solid #666
  text-decoration: none
  border-radius: 100px
  text-transform: uppercase
  letter-spacing: .1em
  transition: background .3s ease, border .3s ease
  
  &:hover
    color: #fff
    background: #333
    border-color: #333
  
.section
  height: 60em
  position: relative
  display: flex
  
.section-01
  texturize('concrete')
  background-color: #F5D76E
  
.section-02
  texturize('paper')
  background-color: #fff
  
.section-03
  texturize('cubes')
  background-color: #1E8BC3
  
.section-04
  texturize('dust')
  background-color: #03C9A9
  
.section-05
  texturize('grunge')
  background-color: #eee
  
.section-content
  margin: auto
  font-family: 'Lucida Console', Monaco, monospace
  font-size: 4em
  font-weight: bold
  color: #444